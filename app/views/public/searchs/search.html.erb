
<div class ="album py-5 db-light">
  <div class = "container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
      <% @posts.each do |post| %>
        <div class="col">
          <div class="card shadow-sm" >
            <div class="card-body">
              <%= link_to camper_path(post.camper),class: "black-color no-text-decoration",
              title: post.camper.camper_name do %>
                <string><%= post.camper.camper_name %></string>
              <% end %>
              <%= link_to post_path(post),class: "black-color no-text-decoration",
              title: post.caption do %>
               <string><%= post.caption %></string>
              <% end %>
              <%= image_tag post.photos.first.image.url(:medium), :size =>'200x200', class: "ml-auto mx-0 my-auto"  %>
              <div class="d-flex justify-content-between align-items-center">
                 <div class="btn-group">
                  <% if camper_signed_in? %>
                  <% unless @camper == current_camper %>
                    <div id="like-icon-post-<%= post.id.to_s %>">
                      <%=  render "public/posts/like_button", { post: post } %>
                    </div>
                  <% end %>
                  <% end %>
                 </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div> 
</div>
