<h2 class="head-line title_h2 text-center">会員一覧</h2>
  <div class ="container">
    <div class="col-md-10 col-md-offset-1 mx-auto ">
      <div class = "row">
        <div class="col-md-8">
          <div class="card-left">
            <table class="table table-hover table-bordered table-condensed">
              <thead>
               <tr class="info">
                <th>ユーザーネーム</th>
                <th></th>
                <th></th>
               </tr>
              </thead>

            <tbody>
              <% @campers.each do |camper| %>
               <thead>
                 <tr>
                   <td class="text-left">
                     <%= link_to camper_path(camper), class: "btn-link"  do %>
                     <p class="far fa-user"></p>
                     <%= camper.camper_name %>
                     <% end %>
                   </td>
                   <td>フォロー数: <%= camper.followings.count %></td>
                   <td>フォロワー数: <%= camper.followers.count %></td>
                 </tr>
               </thead>
              <% end %>

            </tbody>
          </table>


          </div>
        </div>
      </div>
    </div>
  </div>